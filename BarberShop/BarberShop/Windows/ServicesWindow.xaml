<Window x:Class="BarberShop.Windows.ServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Title="ServicesWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image
            Source="/Images\barberImg.png"
            Grid.RowSpan="3"
            />
        <TextBlock
            Grid.Row="0"
                Text="Услуги"
                FontSize="70"
                TextAlignment="Center"
                VerticalAlignment="Center"
                Margin="10" 
                Foreground="White"
                />
        <Button
            Grid.Row="0"
                x:Name="Close"
                Height="50"
                Width="50"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="20"
                Click="Close_Click" 
                BorderBrush="{x:Null}" 
                Foreground="{x:Null}"  
                >
            <Button.Background>
                <ImageBrush ImageSource="/Images/cross.png"/>
            </Button.Background>
        </Button>


        <DataGrid
            x:Name="AllServices"
            Grid.Row="1"
            AutoGenerateColumns="False"
            Background="Transparent"
            RowBackground="Transparent"
            Foreground="White"
            FontSize="25"
            IsReadOnly="True"
            >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Width="2*" Binding="{Binding NameService}"/>
                <DataGridTextColumn Header="Цена" Width="*" Binding="{Binding Cost}"/>
                <DataGridTextColumn Header="Длительность услуги" Width="*" Binding="{Binding TimeServices}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button
            Grid.Row="2"
                x:Name="Exit"
                Content="Назад"
                Height="70"
                Width="200"
                FontSize="35" 
                Margin="50"
                VerticalAlignment="Top"
                Click="Exit_Click"
                />
    </Grid>
</Window>
